<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mikestudio.luciddreamcatcher.CheckRealActivity"
    android:background="@mipmap/background">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/borderHead"
        android:src="@mipmap/waveborder"
        android:scaleType="centerCrop"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="100dp"
        android:rotation="180"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/check_real"
        android:id="@+id/real_text"
        android:layout_marginTop="120dp"
        android:textColor="#ff0000"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/then_tap"
        android:id="@+id/then_tap_text"
        android:textColor="#ff0000"
        android:textSize="30sp"
        android:singleLine="false"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@mipmap/pero_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginBottom="30dp"
        android:onClick="onClick"
        android:layout_above="@+id/borderBottom"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/borderBottom"
        android:src="@mipmap/waveborder"
        android:scaleType="centerCrop"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/borderHead"
        android:layout_alignStart="@+id/borderHead"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="0"
        android:id="@+id/mandala_count_pero_real"
        android:background="@mipmap/mandala"
        android:gravity="center"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toLeftOf="@+id/then_tap_text"
        android:layout_toStartOf="@+id/then_tap_text"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/randomText"
        android:layout_below="@+id/real_text"
        android:layout_centerHorizontal="true"
        android:textColor="#ff627b"
        android:textSize="30sp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/then_tap_text"
        android:layout_marginBottom="20dp"
        android:gravity="center" />
</RelativeLayout>
